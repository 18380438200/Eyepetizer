<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/selecor_btn_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_community"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage"
        android:textSize="@dimen/font_8sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_home"
        app:layout_constraintRight_toRightOf="@id/iv_home"
        app:layout_constraintTop_toBottomOf="@id/iv_home"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/iv_community"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/selecor_btn_community"
        app:layout_constraintLeft_toRightOf="@id/iv_home"
        app:layout_constraintRight_toLeftOf="@id/iv_release"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/community"
        android:textSize="@dimen/font_8sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_community"
        app:layout_constraintRight_toRightOf="@id/iv_community"
        app:layout_constraintTop_toBottomOf="@id/iv_community"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/iv_release"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/btn_release_normal"
        app:layout_constraintLeft_toRightOf="@id/iv_community"
        app:layout_constraintRight_toLeftOf="@id/iv_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/selecor_btn_notification"
        app:layout_constraintLeft_toRightOf="@id/iv_release"
        app:layout_constraintRight_toLeftOf="@id/iv_mine"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:textSize="@dimen/font_8sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_notification"
        app:layout_constraintRight_toRightOf="@id/iv_notification"
        app:layout_constraintTop_toBottomOf="@id/iv_notification"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/iv_mine"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/selecor_btn_mine"
        app:layout_constraintLeft_toRightOf="@id/iv_notification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine"
        android:textSize="@dimen/font_8sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_mine"
        app:layout_constraintRight_toRightOf="@id/iv_mine"
        app:layout_constraintTop_toBottomOf="@id/iv_mine"
        android:layout_marginTop="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>