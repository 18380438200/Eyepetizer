<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_13"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="13dp"
    android:paddingBottom="@dimen/dp_16"
    tools:background="@color/text_gray">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="印度，一个色彩的天堂"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="#旅行 / 开眼精选"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="这里是内容"
        android:textColor="@color/half_white"
        android:textSize="@dimen/font_13sp"
        app:layout_constraintTop_toBottomOf="@id/tvTag" />

    <LinearLayout
        android:id="@+id/llAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/tvContent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_action_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_action_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_action_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/cache"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_action_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/collection"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13sp" />
        </LinearLayout>
    </LinearLayout>

    <com.example.base.network.widget.CircleImageView
        android:id="@+id/ivAvator"
        imgUrl="@{item.data.content.data.owner.avatar}"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/icon_user"
        app:es_shape_type="round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAction" />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@{item.data.content.data.description}"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintLeft_toRightOf="@id/ivAvator"
        app:layout_constraintRight_toLeftOf="@id/tvFocus"
        app:layout_constraintTop_toTopOf="@id/ivAvator"
        tools:text="日本工作短片[过劳死]日本工作短片[过劳死]日本工作短片[过劳死]" />

    <TextView
        android:id="@+id/tvSign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1"
        android:singleLine="true"
        android:text="@{item.data.header.description}"
        android:textColor="@color/half_white"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivAvator"
        app:layout_constraintLeft_toRightOf="@id/ivAvator"
        app:layout_constraintRight_toLeftOf="@id/tvFocus"
        tools:text="NOWNESS现在NOWNESS现在NOWNESS现在NOWNESS现在NOWNESS现在" />

    <TextView
        android:id="@+id/tvFocus"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:background="@drawable/shape_white_roundsmall_border"
        android:gravity="center"
        android:text="@string/plus_focus"
        android:textColor="@color/white"
        android:textSize="@dimen/font_10sp"
        app:layout_constraintBottom_toBottomOf="@id/ivAvator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivAvator" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/light_white"
        app:layout_constraintTop_toBottomOf="@id/ivAvator" />

</androidx.constraintlayout.widget.ConstraintLayout>